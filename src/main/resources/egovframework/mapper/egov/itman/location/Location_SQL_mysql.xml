<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="locationDAO">
    <sql id="locationCondition">
        <where>
            DEL_YN = 'N'
        AND GRO_IDX = #{searching.groIdx}
            <if test="searching.searchKeyword != null and searching.searchKeyword != ''">
            AND LOC_NAME LIKE CONCAT('%', #{searching.searchKeyword}, '%')
        </if>
        </where>
    </sql>
    <select id="selectLocationsByGroup" parameterType="string" resultType="locationVO">
        SELECT
            LOC_IDX AS locIdx,
            LOC_NAME AS locName,
            LOC_CODE AS locCode
        FROM
            ITM_LOCATION
        WHERE
            DEL_YN = 'N'
        AND GRO_IDX = #{groIdx}
        ORDER BY LOC_NAME
    </select>

    <select id="selectLocationList" parameterType="pagination" resultType="locationVO">
    SELECT
        LOC_IDX AS locIdx,
        LOC_NAME AS locName,
        LOC_CODE AS locCode
    FROM ITM_LOCATION
        <include refid="locationCondition"/>
    ORDER BY LOC_NAME
    LIMIT #{startList} , #{listSize}
    </select>

    <select id="selectLocationListCnt" parameterType="pagination" resultType="int">
        SELECT
            COUNT(*)
        FROM ITM_LOCATION
        <include refid="locationCondition"/>
    </select>

    <insert id="insertAssetLocation" parameterType="locationVO">
        INSERT INTO
        ITM_LOCATION
        <trim prefix="(" suffix=")" suffixOverrides=",">
            GRO_IDX,
            LOC_CODE,
            LOC_NAME,
            REG_DATE,
            REG_IDX,
            <if test="slNote != null and slNote.trim().length() > 0">SL_NOTE,</if>
        </trim>
            VALUES
                <trim prefix="(" suffix=")" suffixOverrides=",">
                    1, <!-- #{groIdx} 임시 IDX-->
                #{locCode},
                #{locName},
                NOW(),
                77, <!--#{regIdx} 임시 IDX-->
        <if test="slNote != null and slNote.trim().length() > 0 ">#{slNote},</if>
                </trim>
    </insert>
</mapper>